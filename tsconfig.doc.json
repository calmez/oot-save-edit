{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": false,
    "isolatedModules": true,
    "jsx": "react",
    "module": "esnext",
    "moduleDetection": "force",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "useDefineForClassFields": true,
    "lib": ["ESNext"],
    "paths": {
      "@std/*": ["doc.modulestub.ts"],
      "@opentelemetry/api": ["doc.modulestub.ts"]
    },
    "baseUrl": "."
  },
  "exclude": ["**/*.test.ts", "ui/**", "main.ts"]
}
