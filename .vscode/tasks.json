{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run:tui",
      "detail": "Run TUI",
      "type": "deno",
      "command": "task",
      "args": [
        "debug:tui",
        "./test-data/foo.sra"
      ],
      "options": {
        "env": {
          "OTEL_DENO": "true",
          "OTEL_SERVICE_NAME": "tui",
          // Can be set to "true" to enable support for react devtools
          "DEV": "false"
        }
      },
      "problemMatcher": [
        "$deno"
      ]
    },
    {
      "label": "run:gui",
      "detail": "Run GUI",
      "type": "deno",
      "command": "task",
      "args": [
        "debug:gui"
      ],
      "options": {
        "env": {
          "OTEL_DENO": "true",
          "OTEL_SERVICE_NAME": "gui"
        }
      },
      "problemMatcher": [
        "$deno"
      ]
    },
    {
      "label": "attach",
      "type": "shell",
      "command": "${command:workbench.action.debug.start}"
    },
    {
      "label": "build:web",
      "detail": "Build web assets",
      "type": "deno",
      "command": "task",
      "args": [
        "build:web"
      ]
    },
    {
      "label": "web:dev",
      "detail": "Start web development server",
      "type": "deno",
      "command": "task",
      "args": [
        "web:dev"
      ]
    },
    {
      "label": "debug:tui",
      "type": "shell",
      "dependsOn": [
        "run:tui",
        "attach"
      ],
      "problemMatcher": [
        "$deno"
      ]
    },
    {
      "label": "debug:gui",
      "type": "shell",
      "dependsOn": [
        "build:web",
        "run:gui",
        "attach"
      ]
    },
    {
      "label": "run:telemetry",
      "detail": "Run telemetry container",
      "type": "shell",
      "command": "docker run --name lgtm -p 3000:3000 -p 4317:4317 -p 4318:4318 --rm -ti -v ${workspaceFolder}/lgtm/grafana:/data/grafana -v ${workspaceFolder}/lgtm/prometheus:/data/prometheus -v ${workspaceFolder}/lgtm/loki:/data/loki -e GF_PATHS_DATA=/data/grafana docker.io/grafana/otel-lgtm:0.11.10"
    }
  ]
}
