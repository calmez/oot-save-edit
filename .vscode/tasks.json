{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "deno",
      "command": "task",
      "args": [
        "debug:tui",
        "./test-data/foo.srm"
      ],
      "options": {
        "env": {
          // Can be set to "true" to enable support for react devtools
          "DEV": "false"
        }
      },
      "problemMatcher": [
        "$deno"
      ],
      "label": "run:tui",
      "detail": "Run TUI"
    },
    {
      "type": "deno",
      "command": "task",
      "args": [
        "debug:gui"
      ],
      "problemMatcher": [
        "$deno"
      ],
      "label": "run:gui",
      "detail": "Run GUI"
    },
    {
      "label": "attach",
      "type": "shell",
      "command": "${command:workbench.action.debug.start}"
    },
    {
      "label": "debug:tui",
      "type": "shell",
      "dependsOn": ["run:tui", "attach"]
    },
    {
      "label": "debug:gui",
      "type": "shell",
      "dependsOn": ["run:gui", "attach"]
    }
  ]
}
